<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Nom du parc"
            android:layout_marginTop="25dp"
            android:textSize="30dp"
            android:gravity="center"
            android:id="@+id/nomDuParcTitre" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Ville : "
            android:id="@+id/ville"
            android:layout_marginTop="104dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="false" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Note : "
            android:id="@+id/note"
            android:layout_marginRight="90dp"
            android:layout_alignTop="@+id/ville"
            android:layout_alignStart="@+id/nbTerrain" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Eau : "
            android:id="@+id/eau"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/ville"
            android:layout_alignParentStart="true" />

        <com.cengalabs.flatui.views.FlatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Nombre de terrain: "
            android:id="@+id/nbTerrain"
            android:layout_alignTop="@+id/eau"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="56dp" />


        <ListView
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:id="@+id/listView"
            android:layout_below="@+id/eau"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp" />

        <com.cengalabs.flatui.views.FlatButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Créer mon itinéraire"
            android:id="@+id/buttonItineraire"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="70dp" />

    </RelativeLayout>

</RelativeLayout>